{
    "compilerOptions": {
      "target": "es2016",
      "lib": [
        "dom",
        "dom.iterable",
        "esnext"
      ],
      "jsx": "react-jsx",
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
      "allowJs": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "noFallthroughCasesInSwitch": true,
      "typeRoots": [
        "./node_modules/@types",
        "./src/types"
      ],
      "types": [
        "react/next",
        "react-dom/next"
      ]
    },
    "include": [
      "src"
    ]
  }